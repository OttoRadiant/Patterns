public class demo {

    public static void main(String[] args) {
        
        Rightangle a = new Rightangle();
        a.star();
  }

class Rightangle{
    public void star(){
        for(int i = 1; i<= 5 ; i++){
            for (int j = 1; j<= i ; j++){
             System.out.print("*");
            }
            System.out.println();
        }
        
        System.out.println();

    }
}
